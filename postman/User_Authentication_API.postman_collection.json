		{
			"name": "Email Verification",
			"item": [
				{
					"name": "Verify Email - Success",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Verification successful\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/verify?token={{verification_token}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"verify"
							],
							"query": [
								{
									"key": "token",
									"value": "{{verification_token}}",
									"description": "Verification token from email or database"
								}
							]
						},
						"description": "Verify email with valid token"
					},
					"response": []
				},
				{
					"name": "Verify Email - Invalid Token",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/verify?token=invalid-token-12345",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"verify"
							],
							"query": [
								{
									"key": "token",
									"value": "invalid-token-12345"
								}
							]
						},
						"description": "Attempt to verify with invalid token (should fail)"
					},
					"response": []
				},
				{
					"name": "Verify Email - Missing Token",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/verify",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"verify"
							]
						},
						"description": "Attempt to verify without token parameter (should fail)"
					},
					"response": []
				}
			],
			"description": "Email verification endpoints"
		},
		{
			"name": "Login",
			"item": [
				{
					"name": "Login - Success with Username",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"JWT token is present\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('token');",
									"    pm.environment.set('jwt_token', jsonData.token);",
									"});",
									"",
									"pm.test(\"Response contains user info\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('username');",
									"    pm.expect(jsonData).to.have.property('email');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"usernameOrEmail\": \"testuser\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/login",
							"host": [
